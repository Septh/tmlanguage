{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/validate-grammar.js",
            "args": [ "${input:path}", "${input:glob}" ]
        }
    ],
    "inputs": [
        {
            "id": "path",
            "description": "What path do you want to scan for grammar files?",
            "type": "promptString"
        },
        {
            "id": "glob",
            "description": "What files do you want to scan?",
            "type": "promptString"
        }
     ]
}
